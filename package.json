{
  "name": "solcjs-core",
  "version": "0.0.2",
  "description": "solcjs core",
  "main": "src/index",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint src",
    "test": "mocha --recursive test/ -t 30s",
    "coverage": "nyc --reporter=html --reporter=text mocha --recursive test/ -t 30s",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "release": "rm -rf package-lock.json && npm version minor && npm publish",
    "patch": "rm -rf package-lock.json && npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alincode/solcjs-core.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "compiler",
    "browser",
    "web",
    "abi",
    "bytecode"
  ],
  "author": "alincode <alincode@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alincode/solcjs-core/issues"
  },
  "homepage": "https://github.com/alincode/solcjs-core#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-match": "^1.1.1",
    "codecov": "^3.1.0",
    "cross-fetch": "^3.0.0",
    "eslint": "^5.12.0",
    "eslint-plugin-mocha": "^5.2.1",
    "fake-indexeddb": "^2.0.4",
    "mocha": "^5.2.0",
    "mock-browser": "^0.92.14",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "ajax-caching": "^0.1.2",
    "solc-import": "0.0.1",
    "solc-version": "^0.1.4"
  }
}
